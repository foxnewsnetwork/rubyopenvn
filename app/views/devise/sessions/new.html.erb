<!-- new user form -->
<div class="container">
  <div class="row">
    <div class="hardcore">
      <div class="grimdark" style="margin-bottom : 2.5em;">
          <h3 style="display : inline-block;">Login</h3>
          <%= link_to "(Sign up)", new_registration_path(resource_name), :style => "color : rgb(240, 255, 240);" %>
      </div>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <ul class="signupform">
          <li class="signupform">
            <h4>Email</h4>
          </li>
          <li class="signupform">
            <%= f.email_field :email, :class => "input-obtrusive" %>
          </li>
          <li class="signupform">
            <h4 style="display : inline-block;">Password</h4>
            <%= link_to "(Forgot your password?)", new_password_path(resource_name) %><br />
          </li>
          <li class="signupform">
            <%= f.password_field :password, :class => "input-obtrusive" %>
          </li>
          <% if devise_mapping.rememberable? -%>
            <li class="signupform">
              <h4>Remember me? <%= f.check_box :remember_me %></h4>
            </li>
          <% end -%>
          <li class="signupform">
            <%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
<%= debug(flash) if Rails.env.development? %>
